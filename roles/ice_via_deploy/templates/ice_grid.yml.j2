IceGrid.InstanceName=ChannelIceGrid

# IceGrid地址和ip
Ice.Default.Locator=ChannelIceGrid/Locator:tcp -p {{ice_grid_port}} -h {{inventory_hostname}}

IceGrid.Registry.ReplicaName=Master
IceGrid.Registry.Client.Endpoints=tcp -p {{ice_grid_port}} -h {{inventory_hostname}}
IceGrid.Registry.Server.Endpoints=tcp -h {{inventory_hostname}}
IceGrid.Registry.Internal.Endpoints=tcp -h {{inventory_hostname}}

IceGrid.Registry.PermissionsVerifier=ChannelIceGrid/NullPermissionsVerifier
IceGrid.Registry.LMDB.MapSize=10
IceGrid.Registry.LMDB.Path={{deploy_dir}}/ice_via/deploy/lmdb/registry
IceGrid.Registry.DynamicRegistration=1

# 追踪网络连接状态
Ice.Trace.Network=2

Ice.MessageSizeMax=0
